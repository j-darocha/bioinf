
params {
	// directory containing vcf files
	VCFDIR='~/test_g_miner'
	
	// path to beagle3
	PATH2BEAGLE='~/my_software/'
	
	// path to kg refiles files
	BREFS='/dataA/ADME/structures/ref_files_for_phasing/'
	
	// path to snpEff containing the snpEff.jar
        snpeff="~/my_software/snpEff"
	
	// Where to output the files
	OUTFOLDER='myoutput'

	//pluginrelated 
	dirplugins  = "/opt/exp_soft/bioinf/ensembl-vep/plugins/"
	cache       = "/dataB/aux/37/cadd/vep_caches/"
	
	// gene list with "Symbol" in header
	gene_list = "~/ADME/genome_mining/gene_list.txt" 

}

profiles {

    // For execution on a local machine, no containerization. -- Default
    standard {
        process.executor = 'local'
    }
    
    // For execution on a PBS scheduler, no containerization.
    pbs {
        process.executor = 'pbs'
        process.queue = 'batch'
    }

    slurm {
        process.executor = 'slurm'
        process.queue = 'batch'
        process.cpus = '4'
        process.memory = '8G'

    }
}
